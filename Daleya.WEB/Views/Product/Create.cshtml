@model ProductViewModel

<form asp-action="Create" enctype="multipart/form-data">
    <br />
    <div class="border bg-secondary text-white border-1 border-black p-3">
        <h1 class="text-center container text-white ">Create Product</h1>
        <hr />
        <div class="row">
            <div class="col-lg-2 col-sm-2 pb-3">
                <label class="control-label pt-2" style="font-size:20px;">Name</label>
            </div>
            <div class="col-lg-10 col-sm-6 pb-3">
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="col-lg-2 col-sm-2 pb-3">
                <label class="control-label pt-2" style="font-size:20px;">Category Name</label>
            </div>
            <div class="col-lg-10 col-sm-6 pb-3">
                <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-control border shadom">
                    <option disabled selected>--Select Category--</option>
                </select>
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>
            <div class="col-lg-2 col-sm-2 pb-3">
                <label class="control-label pt-2" style="font-size:20px;">Price</label>
            </div>
            <div class="col-lg-10 col-sm-6 pb-3">
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="col-lg-2 col-sm-2 pb-3">
                <label class="control-label pt-2" style="font-size:20px;">Description</label>
            </div>
            <div class="col-lg-10 col-sm-6 pb-3">
                <textarea asp-for="Product.Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="col-lg-2 col-sm-2 pb-3">
                <label class="control-label pt-2" style="font-size:20px;">ImageUrl</label>
            </div>
            <div class="col-lg-10 col-sm-6 pb-3">
                <input asp-for="Product.Image" class="form-control" />
                <input asp-for="Product.ImageUrl" hidden class="form-control" />
                <span asp-validation-for="Product.Image" class="text-danger"></span>
            </div>


            <div class="col-lg-5 col-sm-0 offset-lg-2 offset-sm-0 pt-lg-0 pt-3">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
            <div class="col-lg-5 col-sm-0 pt-lg-0 pt-3 pt-sm-1">
                <a asp-action="Index" class="btn-primary btn form-control ">Back to List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}