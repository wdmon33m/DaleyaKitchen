@model IEnumerable<ProductDto>

<div class="card shadow border-1 border-black">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h1 class="text-white">Products List</h1>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-12 text-end">
				<a class="btn btn-outline-primary" asp-action="Create"><i class="bi bi-plus-square"></i> Create New Product</a>
			</div>
		</div>
		<table class="table table-responsive table-responsive-sm table-bordered border-black">
			<thead>
				<tr>
					<th>
						Name
					</th>
					<th>
						Category Name
					</th>
					<th>
						Price
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@item.Name
						</td>
						<td>
							@item.Category.Name
						</td>
						<td>
							@((item.Price).ToString("c"))
						</td>
						<td>
							<a asp-action="Update" asp-route-productId="@item.ProductId" class="btn btn-success">
								<i class="bi bi-pencil-square"></i>
							</a>
							<a asp-action="Delete" asp-route-productId="@item.ProductId" class="btn btn-danger">
								<i class="bi bi-trash"></i>
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>

	</div>

</div>