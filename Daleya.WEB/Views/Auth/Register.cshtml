@model RegistrationDto

<form asp-action="Register">
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                    <div class="card-header text-center bg-primary-subtle"><h1>Register</h1></div>
                <div class="card-body">
                    <form method="post" action="/login">
                        <!-- Update the 'action' attribute as needed -->
                            <div class="form-group pb-2">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" type="text" class="form-control border- border-black" id="username" name="username" required>
                        </div>
                            <div class="form-group pb-2">
                                <label asp-for="FirstName">First Name</label>
                                <input asp-for="FirstName" type="password" class="form-control border- border-black" id="password" name="password" required>
                            </div> 
                            <div class="form-group pb-2">
                                <label asp-for="LastName">Last Name</label>
                                <input asp-for="LastName" type="password" class="form-control border- border-black" id="password" name="password" required>
                            </div>
                            <div class="form-group pb-2">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" type="password" class="form-control border- border-black" id="password" name="password" required>
                            </div>
                            <div class="form-group pb-4">
                                <label asp-for="PhoneNumber">Phone</label>
                                <input asp-for="PhoneNumber" type="password" class="form-control border- border-black" id="password" name="password" required>
                            </div>

                            <button type="submit" class="form-control btn btn-primary" value="Submit">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}